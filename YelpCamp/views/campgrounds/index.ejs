<% layout('/layouts/boilerplate') %>
<h1>All CampGrounds</h1>

<div class="d-flex justify-content-end" style="margin-right: 25px;">
    <a href="/campgrounds/new"><button class="btn btn-primary" type="button">Create New Campground</button></a>
</div>
<hr>

<% for(let campground of campgrounds){ %>
    <div class="card mb-3" style="width: 100%;">
        <div class="row g-0" style="height: 100%;">
            <!-- column 1/3 space with 100% height -->
            <div class="col-md-4" style="height: 100%;">
                <img src="<%= campground.image %>" class="img-fluid h-100 px-2 py-2" style="width: 100%; object-fit: cover;" alt="Campground Image">
            </div>

            <!-- column 2/3 space -->
            <div class="col-md-8 d-flex flex-column justify-content-between">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text">
                        <strong>Location:</strong> <%= campground.location %> <br>
                        <strong>Price:</strong> $<%= campground.price %> <br>
                        <strong>Description:</strong> <%= campground.description %>
                    </p>
                    <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
    <hr>
<% } %>
