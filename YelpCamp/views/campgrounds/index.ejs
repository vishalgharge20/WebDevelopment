<% layout('/layouts/boilerplate') %>
<h1>All CampGrounds</h1>

<div class="d-flex justify-content-end" style="margin-right: 25px;">
    <a href="/campgrounds/new"><button class="btn btn-primary" type="button">Create New Campground</button></a>
</div>
<hr>

<% for(let campground of campgrounds){ %>
    <div class="card d-flex flex-row mb-3" style="width: 100%;">
        <div class="row g-0" style="height: 100%;"> <!-- Ensure full height for row -->
            <!-- column 1/3 space -->
            <div class="col-md-4 h-100">
                <img src="<%= campground.image %>" class="img-fluid px-1 py-1" style="width: 100%; height: 100%; object-fit: cover;" alt="...">
            </div>
            <!-- column 2/3 space -->
            <div class="col-md-8 d-flex flex-column">
                <div class="card-body d-flex flex-column justify-content-between"> <!-- Ensure content is evenly spaced -->
                    <div>
                        <h5 class="card-title"><%= campground.title %></h5>
                        <div class="card-description"> 
                            Location: <%= campground.location %> <br> 
                            Price: $<%= campground.price %> <br>
                            Description: <%= campground.description %>
                        </div>
                    </div>
                    <a href="/campgrounds/<%= campground.id %>">
                        <button class="btn btn-primary mt-3">View</button> <!-- Button stays at bottom -->
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr>
<% } %>
